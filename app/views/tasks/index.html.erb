<% if user_signed_in? %>
  <div class="card">
    <div class="card_body">
    <h1 class="card-title mb-4 mt-4">Tasks</h1> 
      <hr>
      <div class="task">
        <% @tasks.each do |task| %>
          <div class="task-item">
            <p>      
              <span class="title pr-2"><%= link_to task.title, task %></span>
              <span class="pr-2"><%= link_to 'New Task', new_task_path, class: 'action btn btn-primary' %></span> 
              <span class="pr-2"><%= link_to 'Edit', edit_task_path(task), class: 'action btn btn-primary' %></span>
              <span class="pr-2"><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'action btn btn-primary' %></span>
              <span class="pr-2"><%= link_to 'Completed',completed_task_path(task), data: {method: :put}, class: 'action btn btn-primary' %></span>
            </p>
          </div>                  
        <% end %>
      </div>
    

  <hr>
      <div class="task">
        <% @completed_tasks.each do |task| %>
          <div class="task-item">
            <p> 
              <span class="title completed pr-2"><%= link_to task.title, task %></span>
              <span class="pr-2"><%= link_to 'New Task', new_task_path, class: 'action btn btn-primary' %></span> 
              <span class="pr-2"><%= link_to 'Edit', edit_task_path(task), class: 'action btn btn-primary' %></span>
              <span class="pr-2"><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'action btn btn-primary' %></span>
             <span class="pr-2"><%= link_to 'Uncompleted',uncompleted_task_path(task), data: {method: :put}, class: 'action btn btn-primary' %></span>  
            </p>
          </div>              
        <% end %>
      </div>
    </div>   
  </div>
<% end %>
